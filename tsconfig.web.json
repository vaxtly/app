{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "outDir": "./out",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "types": ["svelte"],
    "paths": {
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": ["src/renderer/**/*", "src/renderer/**/*.svelte", "src/shared/**/*"]
}
